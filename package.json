{
  "name": "es6-fullstack",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.13.3",
    "cors": "^2.7.1",
    "express": "^4.13.3"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "grunt": "^0.4.5",
    "grunt-babel": "^5.0.1",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-watch": "^0.6.1",
    "load-grunt-tasks": "^3.2.0",
    "nodemon": "^1.5.0"
  },
  "scripts": {
    "dev-server": "nodemon --watch ./src/server -x 'babel-node ./src/server/index.js'",
    "release-server": "nodemon --watch ./dist/server.js -x 'babel-node ./dist/server.js'",
    "start": "grunt & npm run dev-server",
    "build": "grunt release",
    "server": "npm run build && npm run release-server",
    "serve": "npm run build && npm run release-server"
  }
}
